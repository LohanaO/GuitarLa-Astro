---

export interface Props{
    titulo: string;
    imagen: string;
    contenido: string;
}

const { titulo, imagen, contenido } = Astro.props;
const backgroundImage = `url(${imagen})`;
---

<style define:vars={{backgroundImage}}>

    .curso {
        background-image: linear-gradient(0deg, rgba(0,0,0,0.7), rgba(0,0,0,0.7)), var(--backgroundImage);
    }

</style>

<section class="curso">
  <div class="contenedor grid">
    <div class="contenido">
      <h2 class="heading">{titulo}</h2>
      <p >{contenido}</p>
    </div>
  </div>
</section>

<style>
    .curso {
    padding: 10rem 0;
    margin-top: 10rem;
    background-size: cover;
    background-position: center center;

}
@media (min-width: 768px) {
  
    .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }
    .contenido {
        grid-column: 2 / 3;
    }
}
.curso p {
    text-align: center;
    font-size: 2.4rem;
    color: var(--white);
}
</style>